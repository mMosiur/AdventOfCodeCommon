<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Library</OutputType>
    <TargetFramework>net7.0</TargetFramework>
    <Nullable>enable</Nullable>
    <RootNamespace>AdventOfCode.Common</RootNamespace>
  </PropertyGroup>

  <PropertyGroup>
    <PackageId>mMosiur.AdventOfCode.Common</PackageId>
    <Title>Advent of Code Common</Title>
    <Version>0.0.1</Version>
    <Authors>mMosiur</Authors>
    <Description>This package contains common structures, functions and helpers for AoC puzzle solving.</Description>
    <RepositoryUrl>https://github.com/mMosiur/AdventOfCodeCommon</RepositoryUrl>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
  </PropertyGroup>

  <ItemGroup>
    <None Update="README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

</Project>
